{
  "name": "lib",
  "main": "dist/index.js",
  "description": "Common TypeScript libraries",
  "scripts": {
    "clean": "rm -rf node_modules dist *.log",
    "lint": "eslint --ext .js,.ts src/",
    "lint:fix": "npm run lint -- --fix",
    "postinstall": "npm run generate:pb",
    "test": "npm run build && jasmine dist/**/*.spec.js",
    "build": "npm install && tsc",
    "watch": "npm run build && tsc --watch",
    "generate:pbjs": "pbjs -t static-module node_modules/@ground/shared-protos/src/*.proto -o $npm_package_config_codegen_path/ground-protos.js",
    "generate:pbjson": "pbjs -t json node_modules/@ground/shared-protos/src/*.proto -o $npm_package_config_codegen_path/ground-protos.json",
    "generate:pbts": "pbts $npm_package_config_codegen_path/ground-protos.js -o $npm_package_config_codegen_path/ground-protos.d.ts",
    "generate:pb": "mkdir -p $npm_package_config_codegen_path && npm run generate:pbjs && npm run generate:pbjson && npm run generate:pbts"
  },
  "config": {
    "codegen_path": "src/generated"
  },
  "engines": {
    "node": "18"
  },
  "private": true,
  "dependencies": {
    "@google-cloud/firestore": "^7.7.0",
    "@ground/shared-protos": "file:../proto",
    "immutable": "^4.3.6",
    "protobufjs": "^7.3.0"
  },
  "devDependencies": {
    "@types/jasmine": "^4.3.5",
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^4.2.1",
    "gts": "^5.3.0",
    "jasmine": "^5.1.0",
    "prettier": "^2.8.1",
    "protobufjs-cli": "^1.1.2",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.2",
    "typescript": "4.8.4"
  }
}
