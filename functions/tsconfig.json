{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "CommonJS",
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "target": "es2019",
    "allowJs": true,
    "skipLibCheck": true,
    "types": ["node", "jasmine"]
  },
  "compileOnSave": true,
  "include": [
    "src/**/*"
  ]
}
