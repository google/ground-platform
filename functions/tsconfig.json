{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "CommonJS",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "target": "es2019",
    "allowJs": true,
    "paths": {
      "@/*": [
        "src/*",
      ],
      "@types/ground-schema": ["@types/ground-schema/dist/generated/schema"]
    }
  },
  "compileOnSave": true,
  "include": [
    "src/**/*"
  ]
}
