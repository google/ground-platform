{
  "firestore": {
    "indexes": "firestore/firestore.indexes.json"
  },
  "hosting": {
    "public": "web/dist/web",
    "redirects": [
      {
        "source": "/",
        "destination": "/signin",
        "type": 301
      },
      {
        "source": "/s/[:]new",
        "destination": "/survey/new",
        "type": 301
      },
      {
        "source": "/s/:id",
        "destination": "/survey/:id",
        "type": 301
      }
    ],
    "rewrites": [      
      {
        "source": "/importGeoJson",
        "function": "importGeoJson"
      },
      {
        "source": "/exportCsv",
        "function": "exportCsv"
      },
      {
        "source": "**/!(*.*)",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true,
      "port": 4000
    }
  },
  "functions": {
    "source": "functions",
    "ignore": [".git", "firebase-debug.log", "firebase-debug.*.log"]
  }
}
