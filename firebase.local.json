{
  "firestore": {
    "indexes": "firestore/firestore.indexes.json"
  },
  "hosting": {
    "source": "web",
    "redirects": [
      {
        "source": "/",
        "destination": "/signin",
        "type": 301
      }
    ]
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true,
      "port": 4000
    }
  },
  "functions": {
    "source": "functions",
    "ignore": [".git", "firebase-debug.log", "firebase-debug.*.log"]
  }
}
